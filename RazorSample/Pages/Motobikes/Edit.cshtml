            <input type="hidden" asp-for="Motobike.Id">
            <td>Name</td>
            <td><input asp-for="Motobike.Name"></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><input asp-for="Motobike.Color"></td>
        </tr>
        <tr>
            <td>Type</td>
            <td><input asp-for="Motobike.Type"></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input asp-for="Motobike.Price"></td>
        </tr>
        <tr>
            <td>Id_Supplier</td>
            <td><input asp-for="Motobike.Id_Supplier"></td>
        </tr>
        <tr>
